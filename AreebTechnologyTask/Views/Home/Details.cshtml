@model Event

<h2 class="mb-4 text-primary">Event Details</h2>

<div class="card shadow-lg p-4 mb-5 bg-white rounded" style="max-width: 700px; margin: auto;">
    <h3 class="card-title text-center mb-3">@Model.Name</h3>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="/Images/@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded mb-3" style="max-height: 400px; object-fit: cover; width: 100%;" />
    }

    <p class="mb-2"><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
    <p class="mb-2"><strong>Venue:</strong> @Model.Venue</p>
    <p class="mb-2"><strong>Description:</strong> @Model.Description</p>
    <p class="mb-2"><strong>Category:</strong> @Model.Category</p>
    <p class="mb-3"><strong>Price:</strong> <span class="text-success">$@Model.Price</span></p>

    <div class="d-flex justify-content-between mt-3">
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary w-45">⬅️ Back to Events</a>
        <form asp-action="BookEvent" asp-controller="Home" method="post">
            <input type="hidden" name="eventId" value="@Model.Id" />
            <button type="submit" class="btn btn-success w-45">Book Now</button>
        </form>
    </div>
</div>

