@model IEnumerable<AreebTechnologyTask.Models.Event>

<h2>Event List</h2>
<a asp-action="AddEvent" class="btn btn-primary">Add New Event</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Venue</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Name</td>
                <td>@evt.Date.ToShortDateString()</td>
                <td>@evt.Venue</td>
                <td>
                    <a asp-action="EditEvent" asp-route-id="@evt.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteEvent" asp-route-id="@evt.Id" method="post" style="display:inline">
                        <a asp-action="Details" asp-route-id="@evt.Id" class="btn btn-info">Details</a>
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this event?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
