@{
    Layout = null;
    var userRole = ViewData["UserRole"] as string;
    var returnUrl = userRole == "Admin" ? "/Admin/AdminPanel" : "/";
}

<div style="
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(5px);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;">
    <div style="
        background: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 400px;
        width: 90%;">
        <h1 style="
            color: #dc3545;
            margin-bottom: 1rem;
            font-size: 24px;">Unauthorized Access</h1>
        <p style="
            color: #6c757d;
            margin-bottom: 1.5rem;
            font-size: 16px;">You do not have permission to access this page.</p>
        <a href="@returnUrl" style="
            display: inline-block;
            padding: 0.5rem 1.5rem;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.2s;">Return to @(userRole == "Admin" ? "Admin Panel" : "Home")</a>
    </div>
</div> 